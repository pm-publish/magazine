    <div class="c-header__main">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="c-header__main__container">
                        <div class="c-header__main__logo">
                            <a href="{{networkData.defaultBlogUrl}}">
                                <img src={{logo}} class="img-fluid" />
                            </a>
                        </div>
                        <div class="c-header__main__otherInfo">
                            <div class="loggedin-info">
                                {% if paywall %}
                                    {% if loggedin %}
                                        <a href="javascript:;" onclick="headerMicroMenuOpen()" class="loggedin-info__label">
                                            {{user.firstname}} {{user.lastname}}
                                        </a>
                                        {% else %}
                                        <a href="{{networkData.defaultBlogUrl}}/subscriptions" class="c-button c-button--mainThemeClr">Subscribe</a>
                                    {% endif %}
                                {% endif %}
                            </div>
                            {% if paywall %}
                                {% if loggedin %}
                                    <div class="loggedin-info__extended" id="headerMicroMenu">
                                        <a class="loggedin-info__extended-item" href="{{networkData.defaultBlogUrl}}/user/edit-profile">My Account</a>
                                        <a class="loggedin-info__extended-item" href="{{_AppHelper.getLogoffUrl()}}">Log out</a>
                                        <a href="javascript:;" onclick="headerMicroMenuClose()" class="loggedin-info__extended-close">
                                            <span class="text">Close</span>
                                            <span class="icon">
                                                <img src="{{networkData.templatePath}}/static/icons/icons-reverse.svg" class="img-fluid" /> 
                                            </span>
                                        </a>
                                    </div>
                                {% endif %}
                            {% endif %}
                            <div class="c-header__main__icons-container">
                                <a href="javascript:;"  class="c-header__main__icons-item">
                                    <img src="{{networkData.templatePath}}/static/icons/icons-navigation-search.svg" class="img-fluid" /> 
                                </a>
                                <a href="javascript:;"  class="c-header__main__icons-item js-menu">
                                    <img src="{{networkData.templatePath}}/static/icons/icons-navigation-hamburger.svg" class="img-fluid" /> 
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
