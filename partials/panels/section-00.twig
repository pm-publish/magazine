{% set articleCount = 0 %}
{% set cardIndex = 0 %}

<div class="row" data-section="00">
    <div class="col-12">
        <div class="home-firstContainer row">
            <div class="col-12 col-lg-6">
                {{this.render('../_single-article.twig', {
                    article: articles[articleCount],
                    position: (articleCount+1),
                    imageSize: {width: 635, height: 450},
                    containerClass: "card-2-mobile card-2-tablet card-2-desktop",
                    timeSuppress: timeSuppress
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
            </div>
            <div class="col-12 col-lg-6">
                <div class="row">
                    {% for i in 1..2 if articles[articleCount] %}
                        <div class="col-12">
                            {{this.render('../_single-article.twig', {
                            article: articles[articleCount],
                            position: (articleCount+1),
                            imageSize: {width: 96, height: 96},
                            containerClass: "card-6-mobile card-6-tablet card-6-desktop",
                            timeSuppress: timeSuppress
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        </div>
                    {% endfor %}
                </div>
                <div class="row">
                    {% for i in 3..4 if articles[articleCount] %}
                        <div class="col-12 col-md-6">
                            {{this.render('../_single-article.twig', {
                            article: articles[articleCount],
                            position: (articleCount+1),
                            imageSize: {width: 306, height: 250},
                            containerClass: "card-3-mobile card-3-tablet card-3-desktop",
                            timeSuppress: timeSuppress
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% set cta = _CallToAction.getKeywordBasedCTA('newsletter')%}
        {% if cta %}
            {{this.render('../cta-newsletter.twig', {
                networkData: networkData,
            }) | raw}}
        {% endif %}

        {% if articles | length > 4 %}
            <div class="home-secondContainer row">
                {% for i in 5..8 if articles[articleCount] %}
                <div class="col-12 col-lg-3 left-border">
                    {{this.render('../_single-article.twig', {
                    article: articles[articleCount],
                    position: (articleCount+1),
                    imageSize: {width: 306, height: 250},
                    containerClass: "card-7-mobile card-7-tablet card-7-desktop",
                    timeSuppress: timeSuppress
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                </div>
                {% endfor %}
            </div>
        {% endif %}

    </div>
</div>

{% if adslots[0] is defined %}
    <div class="adBlocker adBlocker--fullwidth d-none d-xl-block">
        <div class="row">
            <div class="col-12">
                <div class="j-adslot" id="{{adslots[0]}}" data-adshape="mrec"></div>
            </div>
        </div>
    </div>
{% endif %}